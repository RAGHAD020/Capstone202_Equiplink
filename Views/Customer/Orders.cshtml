@model EquipLink.ViewModels.CustomerVMs.CustomerProfileViewModel

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <p class="text-muted mb-0">View and manage your equipment orders</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @if (Model.Orders.Any())
        {
            @foreach (var order in Model.Orders)
            {
                <div class="col-xxl-4 col-lg-6 col-md-12">
                    <div class="card order-card h-100">
                        <div style="background: #ffee9a !important;" class="card-header text-dark d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">ORD-@order.OrdId</h5>
                            <span class="badge bg-white text-dark">@order.OrdStatus</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <div>
                                    <h6 class="fw-bold mb-1">Order Date</h6>
                                    <p class="mb-0">@order.OrdCreatedDate?.ToString("yyyy-MM-dd")</p>
                                </div>
                                <div class="text-end">
                                    <h6 class="fw-bold mb-1">Total Amount</h6>
                                    <p class="mb-0 text-success fw-bold">SAR @order.OrdTotalPrice.ToString("F2")</p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h6 class="fw-bold mb-1">Provider</h6>
                                    <p class="mb-0">@order.Provider?.UserFname ?? "N/A" @order.Provider?.UserLname</p>
                                </div>
                                <div class="text-end">
                                    <h6 class="fw-bold mb-1">Payment Status</h6>
                                    @{
                                        var payment = order.Payments.FirstOrDefault();
                                    }
                                    <span class="badge @(payment?.PayStatus == "Pending" ? "bg-warning" :
                                                                                        (payment?.PayStatus == "Completed" ? "bg-success" :
                                                                                        (payment?.PayStatus == "Refunded" ? "bg-info" : "bg-danger")))">
                                @payment?.PayStatus ?? "N/A"
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top">
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="modal" data-bs-target="#orderDetailsModal@(order.OrdId)">
                            <i class="fas fa-eye me-1"></i> Details
                        </button>
                        <button class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="modal" data-bs-target="#maintenanceModal" data-order-id="@order.OrdId">
                            <i class="fas fa-tools me-1"></i> Maintenance
                        </button>
                        <button class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="modal" data-bs-target="#reviewModal@(order.OrdId)">
                            <i class="fas fa-star me-1"></i> Review
                        </button>
                        <button class="btn btn-sm btn-outline-primary action-btn" onclick="printInvoice('@order.OrdId')">
                            <i class="fas fa-print me-1"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

                <!-- Order Details Modal -->
                <div class="modal fade" id="orderDetailsModal@(order.OrdId)" tabindex="-1" aria-labelledby="orderDetailsModalLabel@(order.OrdId)" aria-hidden="true">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div style="background: #ffee9a !important;" class="modal-header bg-primary text-dark">
                                <h5 class="modal-title" id="orderDetailsModalLabel@(order.OrdId)">Order Details - ORD-@order.OrdId</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card mb-4">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0 fw-bold"><i class="fas fa-info-circle me-2"></i>Order Information</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <p class="mb-2"><strong>Order Date:</strong></p>
                                                            <p class="mb-2"><strong>Order Status:</strong></p>
                                                            <p class="mb-2"><strong>Customer:</strong></p>
                                                            <p class="mb-2"><strong>Provider:</strong></p>
                                                        </div>
                                                        <div class="col-6">
                                                            <p class="mb-2">@order.OrdCreatedDate?.ToString("yyyy-MM-dd")</p>
                                                            <p class="mb-2"><span class="badge bg-primary">@order.OrdStatus</span></p>
                                                            <p class="mb-2">@Model.User.UserFname @Model.User.UserLname</p>
                                                            <p class="mb-2">@order.Provider?.UserFname ?? "N/A" @order.Provider?.UserLname</p>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <p><strong>Notes:</strong> @(order.OrdNotes ?? "None")</p>
                                                </div>
                                            </div>

                                    @if (order.Deliveries.Any())
                                            {
                                                var delivery = order.Deliveries.First();
                                                <div class="card mb-4">
                                                    <div class="card-header bg-light">
                                                        <h6 class="mb-0 fw-bold"><i class="fas fa-truck me-2"></i>Delivery Information</h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <p class="mb-2"><strong>Delivery Date:</strong></p>
                                                                <p class="mb-2"><strong>Delivery Fee:</strong></p>
                                                                <p class="mb-2"><strong>Provider:</strong></p>
                                                            </div>
                                                            <div class="col-6">
                                                                <p class="mb-2">@delivery.DeliverDate.ToString("yyyy-MM-dd")</p>
                                                                <p class="mb-2">SAR @delivery.DeliverFee?.ToString("F2")</p>
                                                                <p class="mb-2">@(delivery.DeliverProviderName ?? "N/A")</p>
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <p><strong>Address:</strong> @delivery.DeliverAt</p>
                                                        <p><strong>Notes:</strong> @(delivery.DeliverNote ?? "None")</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <div class="col-md-6">
                                            <div class="card mb-4">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0 fw-bold"><i class="fas fa-credit-card me-2"></i>Payment Information</h6>
                                                </div>
                                                <div class="card-body">
                                                    @{
                                                        var firstPayment = order.Payments.FirstOrDefault();
                                                    }
                                                    @if (firstPayment != null)
                                                    {
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <p class="mb-2"><strong>Payment Method:</strong></p>
                                                                <p class="mb-2"><strong>Payment Status:</strong></p>
                                                                <p class="mb-2"><strong>Amount Paid:</strong></p>
                                                                <p class="mb-2"><strong>Transaction ID:</strong></p>
                                                            </div>
                                                            <div class="col-6">
                                                                <p class="mb-2">@firstPayment.PayMethod</p>
                                                                <p class="mb-2">
                                                                    <span class="badge @(firstPayment.PayStatus == "Pending" ? "bg-warning" :
                                                                                                                                                    (firstPayment.PayStatus == "Completed" ? "bg-success" :
                                                                                                                                                    (firstPayment.PayStatus == "Refunded" ? "bg-info" : "bg-danger")))">
                                                            @firstPayment.PayStatus
                                                        </span>
                                                    </p>
                                                    <p class="mb-2 text-success fw-bold">SAR @firstPayment.PayAmount.ToString("F2")</p>
                                                    <p class="mb-2">@(firstPayment.PayTransactionId ?? "N/A")</p>
                                                </div>
                                            </div>
                                            <hr>
                                            <p><strong>Payment Date:</strong> @firstPayment.PayDate.ToString("yyyy-MM-dd")</p>
                                                                                        }
                                                    else
                                                    {
                                                        <p class="text-muted">No payment information available.</p>
                                                    }
                                                </div>
                                            </div>

                                            <div class="card">
                                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                                    <h6 class="mb-0 fw-bold"><i class="fas fa-calculator me-2"></i>Order Summary</h6>
                                                    <span class="badge bg-primary">Total: SAR @order.OrdTotalPrice.ToString("F2")</span>
                                                </div>
                                                <div class="card-body p-0">
                                                    <div class="table-responsive">
                                                        <table class="table table-hover mb-0">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Item</th>
                                                                    <th>Type</th>
                                                                    <th>Price</th>
                                                                    <th>Subtotal</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in order.Orderequipments)
                                                                {
                                                                    <tr>
                                                                        <td>@(item.Equ?.EquName ?? "N/A")</td>
                                                                        <td>@(item.Equ?.EquType == "rent" ? "Rent" : "Buy")</td>
                                                                        <td>SAR @item.OrdEqUnitPrice.ToString("F2")</td>
                                                                        <td>SAR @item.OrdEqSubTotal.ToString("F2")</td>
                                                                    </tr>
                                                                }
                                                                @if (order.Deliveries.Any())
                                                                {
                                                                    <tr>
                                                                        <td colspan="3">Delivery Fee</td>
                                                                        <td>SAR @order.Deliveries.First().DeliverFee?.ToString("F2")</td>
                                                                    </tr>
                                                                }
                                                                <tr class="table-active">
                                                                    <td colspan="3" class="fw-bold">Total Amount</td>
                                                                    <td class="fw-bold">SAR @order.OrdTotalPrice.ToString("F2")</td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @if (order.Maintenances.Any())
                                    {
                                        <div class="row mt-4">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header bg-light">
                                                        <h6 class="mb-0 fw-bold"><i class="fas fa-wrench me-2"></i>Maintenance Requests</h6>
                                                    </div>
                                                    <div class="card-body p-0">
                                                        <div class="table-responsive">
                                                            <table class="table table-hover mb-0">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th>Request Date</th>
                                                                        <th>Description</th>
                                                                        <th>Amount</th>
                                                                        <th>Status</th>
                                                                        <th>Completed Date</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var maintenance in order.Maintenances)
                                                                    {
                                                                        <tr>
                                                                            <td>@maintenance.MainRegDate.ToString("yyyy-MM-dd")</td>
                                                                            <td>@maintenance.MainDescription</td>
                                                                            <td>SAR @maintenance.MainAmount?.ToString("F2")</td>
                                                                            <td>
                                                                                <span class="badge @(maintenance.MainCompletedDate != null ? "bg-success" : "bg-warning")">
                                                                                    @(maintenance.MainCompletedDate != null ? "Completed" : "Pending")
                                                                                </span>
                                                                            </td>
                                                                            <td>@(maintenance.MainCompletedDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" onclick="printInvoice('@order.OrdId')">
                                    <i class="fas fa-print me-1"></i> Print Invoice
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Review Modal -->
                <div class="modal fade" id="reviewModal@(order.OrdId)" tabindex="-1" aria-labelledby="reviewModalLabel@(order.OrdId)" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div style="background: #ffee9a !important;" class="modal-header bg-primary text-white">
                                <h5 class="modal-title" id="reviewModalLabel@(order.OrdId)">Make Review for Order - ORD-@order.OrdId</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Please select an equipment to review from your order.
                                </div>
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0 fw-bold"><i class="fas fa-list me-2"></i>Equipment in Order</h6>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="list-group list-group-flush">
                                            @foreach (var item in order.Orderequipments)
                                            {
                                                <a href="@Url.Action("Show", "Equipment", new { id = item.EquId, order_id = order.OrdId })"
                                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                                   target="_blank">
                                                    <div>
                                                        <h6 class="mb-1">@(item.Equ?.EquName ?? "N/A")</h6>
                                                        <small class="text-muted">
                                                            Quantity: @item.OrdEqQuantity |
                                                            @(item.Equ?.EquType == "rent" ? "Rental" : "Purchase")
                                                        </small>
                                                    </div>
                                                    <span class="badge bg-primary rounded-pill">
                                                        <i class="fas fa-star me-1"></i> Review
                                                    </span>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Orders Found</h4>
                        <p class="text-muted">You haven't placed any orders yet.</p>
                        <a href="@Url.Action("Index", "Equipment")" class="btn btn-primary">
                            <i class="fas fa-shopping-cart me-1"></i> Browse Equipment
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Maintenance Modal (Reused for Request) -->
<div class="modal fade" id="maintenanceModal" tabindex="-1" aria-labelledby="maintenanceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="maintenanceModalLabel">Request Maintenance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="maintenanceForm" method="POST" action="@Url.Action("RequestMaintenance", "Customer")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="orderId" id="maintenanceOrderId">
                    <div class="mb-3">
                        <label for="description" class="form-label fw-bold">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                        <span class="text-danger" asp-validation-for="RequestMaintenance.Description"></span>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label fw-bold">Amount (SAR)</label>
                        <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0" required>
                        <span class="text-danger" asp-validation-for="RequestMaintenance.Amount"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Request</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .order-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

            .order-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

            .order-card .card-header {
                border-radius: 10px 10px 0 0 !important;
                padding: 15px 20px;
            }

        .equipment-summary {
            max-height: 120px;
            overflow-y: auto;
            padding-right: 10px;
        }

        @@media (max-width: 768px) {
            .order-card .card-footer .btn {
                margin-bottom: 5px;
                width: 100%;
            }

            .order-card .card-footer {
                display: block !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Maintenance Modal
            const maintenanceModal = document.getElementById('maintenanceModal');
            if (maintenanceModal) {
                maintenanceModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const orderId = button.getAttribute('data-order-id');
                    document.getElementById('maintenanceOrderId').value = orderId;
                    document.getElementById('maintenanceForm').action = '@Url.Action("RequestMaintenance", "Customer")' + '/' + orderId;
                });
            }

            // Filter orders
            document.querySelectorAll('[data-filter]').forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filter = this.getAttribute('data-filter');
                    // Implement your filtering logic here
                    console.log('Filter by:', filter);
                });
            });
        });

        function printInvoice(orderId) {
            const url = `/Customer/${orderId}/Invoice`;
            const printWindow = window.open(url, '_blank');

            // The printing will be handled by the invoice view itself
            // No need to manipulate DOM or collect data here
        }
    </script>
}