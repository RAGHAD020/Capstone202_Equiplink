@model IEnumerable<EquipLink.ViewModels.AdminVMs.EquipmentRequestViewModel>

@{
    ViewData["Title"] = "Equipment Requests";
}

<section class="py-5 bg-light">
    <div class="container-fluid dashboard-container">
        <div class="row">
            <!-- Sidebar -->
            @await Html.PartialAsync("~/Views/Admin/_AdminSidebar.cshtml")

            <!-- Main Content -->
            <div class="col-lg-9 col-md-8">
                <h1 class="fw-bold mb-4">Equipment Requests</h1>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Equipment</th>
                                <th>Requested By</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var request in Model)
                                {
                                    <tr>
                                        <td>REQ-@request.ReqId</td>
                                        <td>
                                            <strong>@request.EquipmentName</strong><br>
                                        </td>
                                        <td>@request.RequestedBy</td>
                                        <td>@request.RequestDate?.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @{
                                                var badgeClass = request.ApprovalStatus == "Approved" ? "bg-success" :
                                                request.ApprovalStatus == "Rejected" ? "bg-danger" : "bg-secondary";
                                            }
                                            <span class="badge @badgeClass">
                                                @request.ApprovalStatus
                                            </span>
                                        </td>
                                        <td>
                                            <form method="post" asp-action="UpdateRequestStatus">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="ReqId" value="@request.ReqId" />

                                                <div class="mb-2">
                                                    <select name="ReqApprovalStatus" class="form-select form-select-sm" required>
                                                        <option value="Approved" selected="@(request.ApprovalStatus == "Approved")">Approve</option>
                                                        <option value="Rejected" selected="@(request.ApprovalStatus == "Rejected")">Reject</option>
                                                    </select>
                                                </div>

                                                <textarea name="ReqAdminNotes" class="form-control form-control-sm mb-2"
                                                  rows="2" placeholder="Admin Notes">@request.AdminNotes</textarea>

                                                <button type="submit" class="btn btn-sm btn-primary">Save</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No requests found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>