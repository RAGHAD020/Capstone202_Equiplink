@using EquipLink.ViewModels.AuthVMs
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="card shadow-sm w-50 p-5 border-0 mx-auto">
            <div class="row">
                <h3 class="fw-bold text-center mb-4">Login to EquipLink</h3>
                <p class="text-center text-muted mb-4" style="font-size: 0.95rem;">
                    Access your EquipLink account to manage, rent, or list industrial equipment with ease and security.
                </p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }

                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["success"]
                    </div>
                }

                <form method="POST" asp-action="Login" asp-controller="Auth">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="UserEmail" class="form-label fw-bold"></label>
                        <input asp-for="UserEmail" class="form-control">
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserPassword" class="form-label fw-bold"></label>
                        <input asp-for="UserPassword" type="password" class="form-control">
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>

                    <p class="text-end mb-4">
                        <a asp-action="ForgotPassword" asp-controller="Auth" class="text-primary">Forgot Password?</a>
                    </p>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>

                    <p class="text-center mt-3">
                        Don't have an account?
                        <a asp-action="Register" asp-controller="Auth" class="text-primary">Register</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', function() {
                const errorSpan = document.querySelector(`[data-valmsg-for="${this.name}"]`);
                if (errorSpan) {
                    errorSpan.textContent = '';
                }
            });
        });
    </script>
}