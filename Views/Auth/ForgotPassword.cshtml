@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="card shadow-sm w-50 p-5 border-0 mx-auto">
            <h3 class="fw-bold text-center mb-4">Forgot Your Password?</h3>
            <p class="text-center text-muted mb-4" style="font-size: 0.95rem;">
                Enter your email address, and we'll send you instructions to reset your password.
            </p>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["success"]
                </div>
            }

            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["error"]
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="email" class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                    <span class="text-danger">@Html.ValidationMessage("email")</span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
                <p class="text-center mt-3">
                    <a asp-action="Login" class="text-secondary">Back to Login</a>
                </p>
            </form>
        </div>
    </div>
</section>