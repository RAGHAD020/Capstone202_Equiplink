@model IEnumerable<Maintenance>

@section Styles {
    <style>
        .dashboard-container {
            padding: 20px;
        }

        .dashboard-card {
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .action-btn {
            margin-right: 5px;
        }
    </style>
}

<section class="py-5">
    <div class="container-fluid dashboard-container">
        <div class="row">
            <!-- Sidebar -->
            <partial name="_OperatorSidebar" />

            <!-- Main Content -->
            <div class="col-lg-9 col-md-8">
                <h1 class="fw-bold mb-4">Maintenance Requests</h1>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Maintenance Requests Table -->
                <div class="card dashboard-card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="fw-bold">Maintenance Requests List</h3>
                            <input type="text" class="form-control me-2" id="searchMaintenance"
                                   placeholder="Search maintenance requests..." style="max-width: 200px;">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Maintenance ID</th>
                                        <th>Order ID</th>
                                        <th>Registration Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="maintenanceTableBody">
                                    @foreach (var maintenance in Model)
                                    {
                                        <tr>
                                            <td>MAIN-@maintenance.MainId</td>
                                            <td>ORD-@(maintenance.Ord?.OrdId.ToString() ?? "N/A")</td>
                                            <td>@maintenance.MainRegDate</td>
                                            <td>SAR @(maintenance.MainAmount?.ToString("N2") ?? "0.00")</td>
                                            <td>@maintenance.MainStatus</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary action-btn" data-bs-toggle="modal"
                                                        data-bs-target="#maintenanceDetailsModal@(maintenance.MainId)">
                                                    View Details
                                                </button>
                                                <button class="btn btn-sm btn-outline-info action-btn" data-bs-toggle="modal"
                                                        data-bs-target="#updateStatusModal@(maintenance.MainId)">
                                                    Update Status
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Maintenance Details Modal -->
                                        <div class="modal fade" id="maintenanceDetailsModal@(maintenance.MainId)" tabindex="-1"
                                             aria-labelledby="maintenanceDetailsModalLabel@(maintenance.MainId)" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="maintenanceDetailsModalLabel@(maintenance.MainId)">
                                                            Maintenance Details - MAIN-@maintenance.MainId
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h6>Maintenance Information</h6>
                                                        <p><strong>Order ID:</strong> ORD-@(maintenance.Ord?.OrdId.ToString() ?? "N/A")</p>
                                                        <p><strong>Registration Date:</strong> @maintenance.MainRegDate</p>
                                                        <p><strong>Amount:</strong> SAR @(maintenance.MainAmount?.ToString("N2") ?? "0.00")</p>
                                                        <p><strong>Status:</strong> @maintenance.MainStatus</p>
                                                        <p><strong>Completed Date:</strong> @(maintenance.MainCompletedDate?.ToString() ?? "N/A")</p>
                                                        <p><strong>Description:</strong> @(maintenance.MainDescription ?? "No description")</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Update Status Modal -->
                                        <div class="modal fade" id="updateStatusModal@(maintenance.MainId)" tabindex="-1"
                                             aria-labelledby="updateStatusModalLabel@(maintenance.MainId)" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="updateStatusModalLabel@(maintenance.MainId)">
                                                            Update Status - MAIN-@maintenance.MainId
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form asp-action="MaintenanceUpdateStatus" method="post">
                                                            <input type="hidden" name="maintenanceId" value="@maintenance.MainId" />
                                                            <div class="mb-3">
                                                                <label for="status@(maintenance.MainId)" class="form-label fw-bold">Status</label>
                                                                <select class="form-select" id="status@(maintenance.MainId)" name="status" required>
                                                                    <option value="Scheduled" selected="@(maintenance.MainStatus == "Scheduled")">Scheduled</option>
                                                                    <option value="In Progress" selected="@(maintenance.MainStatus == "In Progress")">In Progress</option>
                                                                    <option value="Completed" selected="@(maintenance.MainStatus == "Completed")">Completed</option>
                                                                </select>
                                                            </div>
                                                            <button type="submit" class="btn btn-primary">Update Status</button>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('searchMaintenance').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#maintenanceTableBody tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}