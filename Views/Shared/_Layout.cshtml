<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EquipLink - Professional Equipment Rental</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css">

    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/icons2.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/iziToast.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)

</head>

<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top border-bottom">
        @await Html.PartialAsync("_Header")
    </header>

    <div class="container">
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active text-white" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Categories" asp-action="Index">
                        <i class="bi bi-grid me-1"></i> Categories
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Providers" asp-action="Index">
                        <i class="bi bi-people me-1"></i> Providers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">
                        <i class="bi bi-envelope me-1"></i> Contact
                    </a>
                </li>
            </ul>
            <div class="d-flex align-items-center">
                <!-- Search Form -->
                <form class="d-flex me-3" asp-controller="Equipment" asp-action="Search" method="get">
                    <input class="form-control bg-light text-dark border-0 me-2" type="search"
                           name="searchTerm" placeholder="Search equipment..."
                           aria-label="Search" style="border-radius: 20px; padding: 0.5rem 1rem;">
                    <button class="btn btn-outline-light rounded-circle" type="submit" style="width: 38px; height: 38px;">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
                <!-- Cart and Login -->
                <a asp-controller="Cart" asp-action="View" class="btn btn-outline-light me-3 position-relative" style="border-radius: 20px;">
                    <i class="bi bi-cart"></i> Cart
                    <span class="badge bg-danger rounded-circle" style="position: absolute; top: -5px; right: -5px;">
                        @ViewBag.CartCount
                    </span>
                </a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-primary rounded-pill px-4" style="transition: background-color 0.3s ease;">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </a>
            </div>
        </div>
    </div>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-8 text-start">
                    <h4 class="fw-bold mb-4 text-dark">EquipLink</h4>
                    <p class="text-dark">Your trusted platform for renting high-quality equipment across Saudi Arabia.</p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-dark"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-dark"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <!-- Contact Us -->
                <div class="col-md-4">
                    <h4 class="fw-bold mb-4 text-dark">Contact Us</h4>
                    <p class="mb-1 text-dark">
                        <i class="bi text-dark bi-envelope me-2"></i>Email:
                        <a href="mailto:support@equiplink.com" class="text-dark text-decoration-none link-hover">support@equiplink.com</a>
                    </p>
                    <p class="text-dark">
                        <i class="bi bi-telephone text-dark me-2"></i>Phone:
                        <a href="tel:+96650000000" class="text-dark text-decoration-none link-hover">+96650000000</a>
                    </p>
                </div>
            </div>
            <div class="text-center mt-5 pt-4 border-top border-secondary">
                <p class="text-dark mb-0">© 2025 EquipLink. All rights reserved. | Designed with <i class="bi bi-heart-fill text-primary"></i> by EquipLink Team</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>

    <script src="~/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/iziToast.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["Success"] != null)
            {
                    <text>
                    iziToast.success({
                        title: 'Success',
                        message: '@TempData["Success"]',
                        position: 'topCenter',
                        timeout: 3000
                    });
                    </text>
            }

            @if (TempData["Error"] != null)
            {
                    <text>
                    iziToast.error({
                        title: 'Error',
                        message: '@TempData["Error"]',
                        position: 'topCenter',
                        timeout: 3000
                    });
                    </text>
            }
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
    <!-- jQuery and validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>